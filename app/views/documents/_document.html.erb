<div id="<%= dom_id document %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= document.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">File:</strong>
    <% if document.file.attached? %>
      <%= link_to document.file.filename, document.file %>

      <% if action_name == "show" %>
        <div class="p-4 border-gray-300 border rounded-md">
          <% if document.file.content_type.match?(/^image\//) %>
            <%= image_tag document.file %>
          <% elsif document.file.content_type == "text/markdown" %>
            <%= @markdown.render(document.file.download).html_safe %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this document", document, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium border border-gray-200" %>
    <%= link_to "Edit this document", edit_document_path(document), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium border border-gray-200" %>
    <hr class="mt-6">
  <% end %>
</div>
