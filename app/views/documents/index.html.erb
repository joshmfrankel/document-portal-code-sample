<div class="w-full">
  <div class="flex justify-between items-center mb-2">
    <h1 class="font-bold text-4xl">Documents</h1>
    <%= link_to "New document", new_document_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="documents" class="min-w-full divide-y gap-2 flex flex-col">
    <% if @documents.exists? %>
      <%= render @documents %>
    <% else %>
      <div class="border-gray-200 border rounded-md p-10">
        <div class="flex flex-col gap-4 items-center">
          <p><%= t(".empty.description") %></p>
          <%= link_to "New document", new_document_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium w-fit" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
