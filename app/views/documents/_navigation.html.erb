<div class="flex gap-4">
  <div data-controller="clipboard" data-clipboard-success-content-value="Copied!" class="flex gap-2">
    <span data-clipboard-target="button" class="text-green-500"></span>
    <span class="hidden">
      <input type="text" value="<%= public_document_url(document.uuid) %>" data-clipboard-target="source" />
    </span>

    <button title="Copy Public URL" type="button" data-action="clipboard#copy" class="w-6 h-fit p-0 border-0">
      <span class="block w-6 h-fit text-seafoam-400">
        <%= heroicon "clipboard" %>
      </span>
    </button>
  </div>

  <% if action_name != "show" && policy(document).show? %>
    <%= link_to document, class: "w-6 h-fit", title: "Show Document" do  %>
      <%= heroicon "eye" %>
    <% end %>
  <% end %>

  <% if action_name != "edit" && policy(document).edit? %>
    <%= link_to edit_document_path(document), class: "w-6 h-fit", title: "Edit Document" do  %>
      <%= heroicon "pencil" %>
    <% end %>
  <% end %>

  <% if policy(document).destroy? %>
    <%= link_to document_path(document), class: "w-6 h-fit", title: "Delete Document", data: { turbo_method: :delete, turbo_confirm: t("confirmations.are_you_sure") } do  %>
      <%= heroicon "trash" %>
    <% end %>
  <% end %>
</div>
