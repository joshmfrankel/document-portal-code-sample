<% if signed_in? %>
  <div class="p-5 flex justify-between sticky top-0 bg-prussian-blue-400 text-white border-b-gray-200 border-b">
    <div>
      <%= link_to t(".links.root"), root_path, class: navbar_link_classes(root_path) %>
    </div>
    <nav class="flex gap-4">
      <%= link_to t(".links.documents"), documents_path, class: navbar_link_classes(documents_path) %>

      <% if policy(User).index? %>
        <%= link_to t(".links.students"), users_path, class: navbar_link_classes(users_path) %>
      <% end %>

      <%= link_to t(".links.sign_out", name: current_user.email), destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: t("confirmations.are_you_sure") }, class: navbar_link_classes(nil) %>
    </nav>
  </div>
<% end %>
